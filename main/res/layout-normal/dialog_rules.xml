<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/rulesDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rulesDialogTitle"
        android:textAlignment="center"
        android:textSize="20sp"
        android:paddingTop="20dp" />

    <TextView
        android:id="@+id/rulesDialogList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rulesDialogList"
        android:textAlignment="textStart"
        android:textSize="15sp"
        android:padding="20dp"
        android:layout_marginBottom="10dp"/>

    <CheckBox
        android:id="@+id/rulesDialogCheckbox"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/rulesDialogCheckbox"
        android:textSize="12sp"
        android:buttonTint="@color/orange"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/rulesDialogButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/shape_button_orange"
        android:text="@string/rulesDialogBtn"
        android:textColor="#ffffff"
        android:textStyle="bold"/>

</LinearLayout>